{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:pocketbase": "pocketbase serve",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit --pretty",
    "typecheck:watch": "npm run typecheck -- --watch",
    "check": "npm run typecheck && npm run lint",
    "git:update": "git fetch && git pull",
    "pi:deploy:next": "npm run git:update && npm ci && npm run build && npm run start",
    "pi:deploy:pb": "npm run git:update && chmod +x ./pocketbase-armv7l && ./pocketbase-armv7l serve --http \"0.0.0.0:8090\"",
    "dev:pwa": "next build && next start"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.28.9",
    "bootstrap": "^5.3.3",
    "classnames": "^2.5.1",
    "lodash": "^4.17.21",
    "next": "13.2.4",
    "next-pwa": "^5.6.0",
    "pocketbase": "^0.21.1",
    "react": "^18",
    "react-bootstrap": "^2.10.5",
    "react-dom": "^18",
    "react-icons": "^5.3.0",
    "sass": "^1.78.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@dword-design/eslint-plugin-import-alias": "^5.1.1",
    "@types/lodash": "^4.17.12",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.3.3",
    "typescript": "^5"
  }
}
