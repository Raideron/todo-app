{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:pocketbase": "pocketbase serve",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit --pretty",
    "typecheck:watch": "npm run typecheck -- --watch",
    "check": "npm run typecheck && npm run lint && npm run test:coverage",
    "git:update": "git fetch && git pull",
    "pi:deploy:next": "npm run git:update && npm ci && npm run build && npm run start",
    "pi:deploy:pb": "npm run git:update && chmod +x ./pocketbase-armv7l && ./pocketbase-armv7l serve --http \"0.0.0.0:8090\"",
    "dev:pwa": "next build && next start",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.64.0",
    "bootstrap": "^5.3.3",
    "classnames": "^2.5.1",
    "lodash": "^4.17.21",
    "next": "14.2.23",
    "next-pwa": "^5.6.0",
    "pocketbase": "^0.21.1",
    "react": "^18",
    "react-bootstrap": "^2.10.9",
    "react-dom": "^19",
    "react-icons": "^5.4.0",
    "sass": "^1.78.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@dword-design/eslint-plugin-import-alias": "^5.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.0.0",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
